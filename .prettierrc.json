{
  "printWidth": 100,
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "proseWrap": "always",
  "overrides": [
    {
      "files": ".github/**/*.md",
      "options": {
        "proseWrap": "preserve"
      }
    },
    {
      "files": "*.css",
      "options": {
        "singleQuote": false
      }
    }
  ]
}
